<script charset="utf-8">
    (function(){
        var drawerInner = document.querySelector('[drawer]').innerHTML,
            mainInner = document.querySelector('[main]').innerHTML,
            ui = document.querySelector('ui-layout'),
            currentType = 'pan',
            currentPosition = 'left';

        function bindEvents(){
            var anchors = document.querySelectorAll('[main] a');

            [].forEach.call(anchors, function(anchor){
                anchor.addEventListener('click', createNewUi);
            });

            document.querySelector('a[data-type="'+currentType+'"]').classList.add('active');
            document.querySelector('a[data-position="'+currentPosition+'"]').classList.add('active');
        }

        function createNewUi(e){
            var ui = document.querySelector('ui-layout'),
                drawer = document.createElement('div'),
                main = document.createElement('div'),
                newUi = new UiLayout();

            drawer.setAttribute('drawer', '');
            drawer.innerHTML = drawerInner;

            main.setAttribute('main', '');
            main.setAttribute('demo', 'layout');
            main.innerHTML = mainInner;

            main.querySelector('button[name="menu"]').addEventListener('click', function(){
                document.querySelector('ui-layout').toggleDrawer();
            });

            newUi.appendChild(drawer);
            newUi.appendChild(main);

            if(this.hasAttribute('data-type')){
                currentType = this.getAttribute('data-type');
            }

            if(this.hasAttribute('data-position')){
                currentPosition = this.getAttribute('data-position');
            }

            drawer.setAttribute(currentPosition,'');
            drawer.setAttribute(currentType,'');

            // ga('send', 'event', 'ui-layout', 'set type and position', currentPosition+' '+currentType);

            document.body.removeChild(ui);
            document.body.appendChild(newUi);

            bindEvents();

            return false;
        }

        bindEvents();
    }());
</script>
