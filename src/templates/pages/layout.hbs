<h2>[ Drawer ]  <span>Configuration</span></h2>
<section>
    <h3>Position</h3>
    <p>
        Position will define where the sidebar is positioned.
    </p>
    <div>
        <a href="#" data-position="left">left</a>
        <a href="#" data-position="right">right</a>
    </div>
</section>

<section>
    <h3>Type</h3>
    <p>
        Type will define the visual effect given to the drawer on exiting and entering.
        This value only applies to viewports smaller than 944 pixels
        <span class="resize">, so go ahead and resize down your browser</span>.
    </p>
    <div>
        <a href="#" data-type="pan">pan</a>
        <a href="#" data-type="parallax">parallax</a>
        <a href="#" data-type="reveal">reveal</a>
        <a href="#" data-type="slide">slide</a>
    </div>
</section>

{{> install}}

<section class="section__palepurple">
    <h3 class="icon-chat">Helpful Gotchas</h3>
    <p>
        <b>{{componentName}}</b> should be placed immediately inside the body tag, this will allow
        to fully fit the viewport.
    </p>
</section>

<akyral-docs component="assets/components/{{componentName}}/{{componentName}}.html"></akyral-docs>


<script charset="utf-8">
    (function(){
        var drawerInner = document.querySelector('[drawer]').innerHTML,
            mainInner = document.querySelector('[main]').innerHTML,
            ui = document.querySelector('akyral-layout'),
            currentType = 'pan',
            currentPosition = 'left';

        function bindEvents(){
            var anchors = document.querySelectorAll('[main] a');

            [].forEach.call(anchors, function(anchor){
                anchor.addEventListener('click', createNewUi);
            });


            document.querySelector('a[data-type="'+currentType+'"]').classList.add('active');
            document.querySelector('a[data-position="'+currentPosition+'"]').classList.add('active');
        }

        function createNewUi(e){
            var ui = document.querySelector('akyral-layout'),
                drawer = document.createElement('div'),
                main = document.createElement('div'),
                newUi = new UiLayout();

            drawer.setAttribute('drawer', '');
            drawer.innerHTML = drawerInner;

            main.setAttribute('main', '');
            main.setAttribute('demo', 'layout');
            main.innerHTML = mainInner;

            main.querySelector('button[name="menu"]').addEventListener('click', function(){
                document.querySelector('akyral-layout').toggleDrawer();
            });

            newUi.appendChild(drawer);
            newUi.appendChild(main);

            if(this.hasAttribute('data-type')){
                currentType = this.getAttribute('data-type');
            }

            if(this.hasAttribute('data-position')){
                currentPosition = this.getAttribute('data-position');
            }

            drawer.setAttribute(currentPosition,'');
            drawer.setAttribute(currentType,'');

            ga('send', 'event', 'akyral-layout', 'set type and position', currentPosition+' '+currentType);

            document.body.removeChild(ui);
            document.body.appendChild(newUi);

            ui = document.querySelector('akyral-layout');

            bindEvents();

            e.preventDefault();

            return false;
        }

        bindEvents();
    }());
</script>
