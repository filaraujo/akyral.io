<!DOCTYPE html>
<html lang="en">

<head>
    <title>{{site.title}}</title>
    {{> meta }}
    <link href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,300,700' rel='stylesheet' type='text/css'>

    {{#is page.components.name undefined}}
        <link rel="stylesheet" href="{{assets}}/styles/index.css">
    {{/is}}

    {{#isnt page.components.name undefined}}
        <link rel="stylesheet" href="{{assets}}/styles/{{page.components.name}}.css">
    {{/isnt}}
    <script src="{{assets}}/components/platform/platform.js"></script>
    <link rel="import" href="{{assets}}/components/akyral-app/akyral-app.html">
</head>

<body unresolved>

    <akyral-layout>
        {{> drawer }}
        <div main {{#isnt page.components undefined}}demo="{{page.components.name}}"{{/isnt}} {{#isnt pageType undefined}}page="{{pageType}}"{{/isnt}}>
            {{> header}}
            {{> body }}
            {{> footer }}
        </div>
    </akyral-layout>

    <script src="{{assets}}/scripts/akyral.js"></script>
</body>

</html>
